<%# Error message %>
<% if session[:errors] %>
	<div id="article-errors" class="alert alert-danger">Formuläret innehåller <%= session[:errors].count %> fel. Kontrollera och försök igen.
		<ul>
			<% session[:errors].each do |msg| %>
				<li class="error"><%= msg %></li>
			<% end %>
		</ul>
	</div>
	<% session[:errors] = nil %>
<% end %>

<div class="form-group">
	<%= f.label :title, "Titel:" %>
	<%= f.text_field :title, class: "form-control input-sm" %>
</div>

<div class="form-group">
	<%= f.label :writer, "Upphovsman:" %>
	<%= f.text_field :writer, class: "form-control input-sm" %>
</div>

<div class="form-group">
	<%= f.label :source, "Källa:" %>
	<%= f.text_field :source, class: "form-control input-sm" %>
</div>
<div class="form-group">
	<%= f.label :year, "År/Datum" %><small> (åååå eller åååå-mm-dd)</small>
	<%= f.text_field :year, class: "form-control input-sm" %>
</div>

<div class="form-group">
	<%= f.label :about, "Beskrivning:" %>
	<%= f.text_area :about, class: "form-control input-sm" %>
</div>

<div class="form-group">
	<%= f.label :url, "Url:" %><small> (Länka till källan)</small>
	<%= f.text_field :url, class: "form-control input-sm" %>
</div>

<%= f.submit "Spara artikel", class: "btn btn-primary" %>