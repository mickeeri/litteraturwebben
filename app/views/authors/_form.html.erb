<%= form_for(@author, html: { multipart: true }) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="form-group">
		<%= f.label :name, "Namn" %>
		<%= f.text_field :name, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :yearofbirth, "Födelseår" %>
		<%= f.text_field :yearofbirth, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :about, "Om" %>
		<%= f.text_area :about, class: 'form-control' %>
	</div>

	<div class="form-group portrait-upload">
		<%= image_tag(@author.portrait.url, class: "thumbnail small-thumb") if @author.portrait? %>
		<%= f.label :portrait, "Ladda upp författarbild" %>
		<%= f.file_field :portrait, accept: 'image/jpeg,image/gif,image/png' %>
		<%= f.hidden_field :portrait_cache %>
		<div class="checkbox-group">
		<% if @author.portrait? %>
			<%= f.check_box :remove_portrait %>
			<%= f.label :remove_portrait, "Ta bort författarbild" %>
		<% end %>
		</div>
	</div>
	<div class="button-group">
		<%= f.submit "Spara", class: 'btn btn-primary' %>
		<%= link_to "Avbryt", authors_path, class: 'btn btn-warning' %>
	</div>
<% end %>