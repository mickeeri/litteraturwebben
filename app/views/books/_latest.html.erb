<%# View for showning one book. %>
<div class="slider books">
	<div class="left" id="left">
		<%= image_tag("icons/left.png") %>
	</div>
	<div class="right" id="right">
		<%= image_tag("icons/right.png") %>
	</div>
	<div class="track" id="latest-books-track">
		<% @books.each do |book| %>
			<div class="book">
				<div class="cover-div">
					<%= link_to(book) do %>
						<%# Display cover pic if there is one. %>
						<% if book.cover? %>
							<%= image_tag book.cover.url %>
						<% else %>
								<div class="default-cover">
									<span class="author-span"><%= "FÃ¶rfattare" %></span>
									<span class="title-span"><%= book.title %></span>
								</div>
						<% end %>
					<% end %>
				</div>
				<div class="caption">
					<%= book.title %>
				</div>
			</div>
		<% end %>
	</div>
</div>
