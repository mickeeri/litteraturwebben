<% provide(:title, 'Sökresultat') %>
<div class="row index">
	<div class="col-md-8 col-md-offset-2 primary-col">
		<%= form_tag search_books_path, method: :get, class: "form-inline search-form", role: "search" do %>
			<div class="form-group">
				<%= text_field_tag :search, params[:search], class: "form-control", id: "book-search-input",
					placeholder: "Sök på böcker" %>
			</div>
			<%= button_tag name: nil, class: "btn btn-default", type: "submit" do %>
				<span class="glyphicon glyphicon-search"></span>
			<% end %>
			<%= link_to "Tillbaka", books_path, class: "btn btn-default" %>
		<% end %>
		<h1 class="index-h1">Sökresultat</h1>
		<ul class="media-list">
			<%= render @books %>
		</ul>
	</div>
</div>