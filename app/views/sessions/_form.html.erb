<%= form_for(:session, url: login_path) do |f| %>
	<div class="form-group">
		<%= f.label :email, "E-post" %>
		<%= f.email_field :email, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :password, "Lösenord" %>
		<%= link_to "(glömt lösenord)", new_password_reset_path %>
		<%= f.password_field :password, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :remember_me do %>
			<%= f.check_box :remember_me, type: "checkbox" %>
			<span>Kom ihåg mig på den här datorn</span>
		<% end %>
	</div>

	<%= f.submit "Logga in", class: "btn btn-primary" %>
<% end %>