<%= form_for(:session, url: login_path) do |f| %>
	<div class="form-group">
		<%= f.label :email, "E-post" %>
		<%= f.email_field :email, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :password, "Lösenord" %>
		<%= f.password_field :password, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :remember_me, class: "remember-me" do %>
			<%= f.check_box :remember_me, type: "checkbox" %>
			Kom ihåg mig
		<% end %>
		<span class="divider"> . </span>
		<%= link_to "Glömt lösenordet?", new_password_reset_path %>
	</div>
	<%= f.submit "Logga in", class: "btn btn-primary" %>
<% end %>