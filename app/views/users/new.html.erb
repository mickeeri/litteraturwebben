<% provide(:title, 'Registrera') %>
<div class="row">
	<div class="col-md-6 col-md-offset-3 primary-col">
		<h1>Registrera ny användare</h1>
		<div class="form-div">
			<%= form_for(@user) do |f| %>
				<%= render 'shared/error_messages', object: f.object %>

				<div class="form-group">
					<%= f.label :name, "Namn" %>
					<%= f.text_field :name, class: 'form-control' %>
				</div>

				<div class="form-group">
					<%= f.label :email, "E-post" %>
					<%= f.email_field :email, class: 'form-control' %>
				</div>

				<div class="form-group">
					<%= f.label :password, "Lösenord" %>
					<%= f.password_field :password, class: 'form-control' %>
				</div>

				<div class="form-group">
					<%= f.label :password_confirmation, "Bekräfta lösenord" %>
					<%= f.password_field :password_confirmation, class: 'form-control' %>
				</div>

				<%= f.submit "Skapa mitt konto", class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>
