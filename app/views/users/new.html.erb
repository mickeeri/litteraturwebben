<% provide(:title, 'Registrera') %>
<h1>Registrera ny användare</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>

			<%= f.label :name, "Namn" %>
			<%= f.text_field :name, class: 'form_control' %>

			<%= f.label :email, "E-post" %>
			<%= f.email_field :email, class: 'form_control' %>

			<%= f.label :password, "Lösenord" %>
			<%= f.password_field :password, class: 'form_control' %>

			<%= f.label :password_confirmation, "Bekräfta" %>
			<%= f.password_field :password_confirmation, class: 'form_control' %>

			<%= f.submit "Skapa mitt konto", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
